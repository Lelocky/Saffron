@inherits LayoutComponentBase

<PageTitle>Saffron</PageTitle>

<Layout Style="min-height: 100vh; ">
    <Sider Collapsible Collapsed=@collapsed OnCollapse=@onCollapse>
        <div class="logo">
            <p>Saffron</p>
        </div>
        <NavMenu />
    </Sider>
    <Layout Class="site-layout">
        <Header Class="header-background" Style=" padding: 0 ;"></Header>
        <Content Style="margin:0 16px;">
            <div class="site-layout-background" style="padding: 24px; min-height: 360px">
                @Body
            </div>
        </Content>
        <Footer Style="text-align:center ">Saffron ©2022</Footer>
    </Layout>
</Layout>


@code {
    bool collapsed;

    void onCollapse(bool collapsed)
    {
        Console.WriteLine(collapsed);
        this.collapsed = collapsed;
    }
}


